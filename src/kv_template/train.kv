<MainView>:

  BoxLayout:
    size: root.size
    orientation: 'vertical'
    padding: [50, 20, 50, 20]
    spacing: 50

    BoxLayout:
      size: root.size
      orientation: 'horizontal'
      spacing: 50

      Image:
        id: img1
        source: 'xk.png'
        allow_stretch: True

      Image:
        id: img2
        source: 'xk_split.png'
        allow_stretch: True

    BoxLayout:
      orientation: 'horizontal'

      Image:
        id: img3
        source: 'split_0.png'
        allow_stretch: True
      Image:
        id: img4
        source: 'split_1.png'
        allow_stretch: True
      Image:
        id: img5
        source: 'split_2.png'
        allow_stretch: True
      Image:
        id: img6
        source: 'split_3.png'
        allow_stretch: True

    BoxLayout:
      orientation: 'horizontal'

      Label:
        id: result
        font_size: 120
        text: 'WARRIOR GO!'

      TextInput:
        id: text_input
        padding: [0, 20, 0, 0]
        font_size: 250
        hint_text: 'hey :)'
        multiline: False
        on_text_validate: root.on_enter(self.text)
